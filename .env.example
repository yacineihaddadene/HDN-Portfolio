# =============================================================================
# PORTFOLIO WEBSITE – Environment Variables
# =============================================================================
# Copy this to .env and update the values.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED – Authentication (min 32 characters each)
# Generate with: openssl rand -base64 32
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET=your-32-character-secret-here-change-me
AUTH_JWT_SECRET=your-32-character-jwt-secret-here-change-me

# -----------------------------------------------------------------------------
# REQUIRED – URLs (use localhost for local dev)
# -----------------------------------------------------------------------------
BETTER_AUTH_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# OPTIONAL – CORS (comma-separated origins)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# OPTIONAL – Google OAuth (see OAUTH_SETUP.md)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# OPTIONAL – pgAdmin (docker compose --profile pgadmin up -d)
# -----------------------------------------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@portfolio.com
PGADMIN_DEFAULT_PASSWORD=admin123
